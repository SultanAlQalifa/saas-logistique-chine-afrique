# Production Environment Variables for NextMove Cargo V1.0
# Deploy on Vercel/Railway/Netlify

# Base Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
LOG_LEVEL=warn
NEXTAUTH_URL="https://nextmove-cargo.vercel.app"
NEXTAUTH_SECRET="nm_prod_secret_2025_secure_key_change_this"

# Database (PostgreSQL Manag√©e - Supabase/Neon/Railway)
DATABASE_URL="postgresql://user:password@host:5432/nextmove_cargo_prod"
DIRECT_URL="postgresql://user:password@host:5432/nextmove_cargo_prod"

# Security & HTTPS
FORCE_HTTPS=true
SECURE_COOKIES=true
CSRF_SECRET="csrf_secret_production_key"

# WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID="your_phone_number_id"
WHATSAPP_ACCESS_TOKEN="your_access_token"
WHATSAPP_APP_ID="your_app_id"
WHATSAPP_APP_SECRET="your_app_secret"
WHATSAPP_WEBHOOK_VERIFY_TOKEN="your_webhook_verify_token"
WHATSAPP_BUSINESS_ACCOUNT_ID="your_business_account_id"

# Wave Money API (Production)
WAVE_API_KEY="wave_prod_api_key"
WAVE_API_SECRET="wave_prod_api_secret"
WAVE_WEBHOOK_SECRET="wave_webhook_secret"

# Monitoring & Analytics
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project"
SENTRY_ORG="nextmove"
SENTRY_PROJECT="cargo-platform"
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# SEO & Social
NEXT_PUBLIC_SITE_URL="https://nextmove-cargo.vercel.app"
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION="your_google_verification"
NEXT_PUBLIC_BING_VERIFICATION="your_bing_verification"
NEXT_PUBLIC_FACEBOOK_APP_ID="your_facebook_app_id"
NEXT_PUBLIC_TWITTER_HANDLE="@nextmovecargo"

# Email Service (SendGrid/Resend)
EMAIL_FROM="noreply@nextmove-cargo.com"
SENDGRID_API_KEY="your_sendgrid_api_key"

# File Storage (Cloudinary/AWS S3)
CLOUDINARY_CLOUD_NAME="nextmove"
CLOUDINARY_API_KEY="your_cloudinary_key"
CLOUDINARY_API_SECRET="your_cloudinary_secret"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Note: Configure these in your deployment platform's environment variables
# NEVER commit actual secrets to Git
